<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.example.sillabe2.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FF00"
        android:text="SI"
        android:textSize="20dp"
        android:id="@+id/bottoneSI"
        android:onClick="cliccatoBottoneSi"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:text="NO"
        android:textSize="20dp"

        android:id="@+id/bottoneNo"
        android:layout_alignTop="@+id/bottoneSI"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="cliccatoBottoneNo"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BA"

        android:textSize="80dp"
        android:textStyle="bold"
        android:id="@+id/textSillaba"
        android:layout_below="@+id/textEsatte"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textEsatte"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textErrate"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/bottoneNo"
        android:layout_alignEnd="@+id/bottoneNo" />
</RelativeLayout>
